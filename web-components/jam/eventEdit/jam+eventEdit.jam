with( $jam )
$define
(   '$eventEdit'
,   new function(){
        
        var handler=
        $Throttler
        (   50
        ,   function( event ){
                $Event().type( '$jam.$eventEdit' ).scream( event.target() )
            }
        )

        var node=
        $Node( $doc().documentElement )
        
        node.listen( 'keyup', handler )
        node.listen( 'cut', handler )
        node.listen( 'paste', handler )

    }
)
