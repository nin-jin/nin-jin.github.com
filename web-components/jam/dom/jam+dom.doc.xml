    <p>
        <wc:test-js> _done( $jam.$dom.serialize( $jam.$dom.parse( '&lt;b&gt;hi!' ) ).toLowerCase(), '&lt;b&gt;hi!&lt;/b&gt;' ) </wc:test-js>
