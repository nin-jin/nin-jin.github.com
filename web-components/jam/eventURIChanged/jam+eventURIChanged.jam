with( $jam )
$define
(   '$eventURIChanged'
,   new function(){
        
        var lastURI= $doc().location.href
        
        var refresh=
        function( ){
            var newURI= $doc().location.href
            if( lastURI === newURI ) return
            lastURI= newURI
            $Event().type( '$jam.$eventURIChanged' ).scream( $doc() )
        }
        
        $glob().setInterval( refresh, 20)
    }
)
