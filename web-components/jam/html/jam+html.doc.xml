<?xml-stylesheet href="../-mix+doc/index.xsl" type="text/xsl" ?>
<doc:root
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:wc="https://github.com/nin-jin/wc"
    xmlns:doc="https://github.com/nin-jin/doc"
    >

    <h1>$jam.$html</h1>
    <p>Содержит функции для работы с хтмл-строками.</p>

    <wc:js-test> _test.ok( $jam.$html ) </wc:js-test>
    <wc:js-test>
        _test.ok( $jam.$html.escape( '&gt;' ), '&amp;gt;' )
    </wc:js-test>
    <wc:js-test>
        _test.ok( $jam.$html.decode( '&amp;gt;' ), '&gt;' )
    </wc:js-test>
    <wc:js-test>
        _test.ok( $jam.$html.text( '&lt;a&gt;a&lt;br&gt;b\nc' ), 'a\nb\nc' )
    </wc:js-test>
    <wc:js-test>
        var template= $jam.$html.Template( 'a{0}b' ).fill([ '&gt;' ])
        _test.ok( String( template ), 'a&amp;gt;b' )
    </wc:js-test>

</doc:root>
